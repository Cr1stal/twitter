<div class="user_form">
  <%= form_for  @user, :url => "/users/update", :method => :post, :html => { :multipart => true, :class => "well" } do |f| %>
      <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@user.errors.count, "error") %>
              prohibited this user from being saved:</h2>
            <ul>
              <% @user.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <fieldset>
        <legend>Enter User Detail</legend>

        <div class="field">
          <%= f.label :nickname, 'NickName'  %>
          <%= f.text_field :nickname, :placeholder => "Enter your nickname...", :class => "span3", size: 40 %>
        </div>

        <div class="field">
          <%= f.label :password, 'Password' %>
          <%= f.password_field :password, size: 40 %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, 'Confirm' %>
          <%= f.password_field :password_confirmation, size: 40 %>
        </div>

        <div class="field">
          <%= f.label :nick_status, 'Nick status' %>
          <%= f.text_field :nick_status, :placeholder => "Enter your nick-status...", :class => "span3" %>
        </div>

        <div class="field">
          <%= f.label :email, 'E-mail' %>
          <%= f.text_field :email, :placeholder => "Enter your email...", :class => "span3"%>
        </div>

        <div class="field">
          <%= f.file_field :avatar %>
        </div>
        <br />

        <div class="field">
          <%= f.submit :class => "btn" %>
        </div>
      </fieldset>
  <% end %>
</div>